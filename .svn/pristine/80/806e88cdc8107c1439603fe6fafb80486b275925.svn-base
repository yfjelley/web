{% load staticfiles %}
{% load pagination_tags %}
<!DOCTYPE html>
<html>
<head lang="en">
    <meta charset="UTF-8">
    <title></title>
</head>
<body>
<div class="search_tips mt10">
    <div class="search_hd">
        <h2>推荐组合标的</h2>
    </div>
    <div class="search_bd search_bd_no">
    {% if c_results.0 %}
        {% for r in c_results %}
            {% if r.ids %}
                <table cellpadding="0" cellspacing="0" border="0" class="search_Tab" width="100%;">
                    <tr>
                        <td rowspan="2" width="130" align="center" valign="middle"><img src="/static/images/logo1.png"/>
                        </td>
                        <td class="search_title search_tl">{{ r.name }}</td>
                        <td width="80">期限</td>
                        <td width="100">年化收益</td>
                        <td rowspan="2" width="100"><a
                                href="{% url 'comb_detail' r.ids %}" target="_Blank"
                                class="seach_cheek">查看详情</a></td>
                    </tr>
                    <tr>
                        <td class="search_tl">借款金额：<font class="c_red">{{ r.amount|floatformat:"-2" }}</font>&nbsp;&nbsp;每万元总收益：<font
                                class="c_red">{{ r.thousandincome|floatformat:"-2" }}元</font></td>
                        <td><font class="c_red">{{ r.term }}</font>个月</td>
                        <td><font class="c_red">{{ r.income_rate|floatformat:"-2" }}</font>%</td>
                    </tr>
                </table>
            {% endif %}
        {% endfor %}
    {% else %}
        <a>无符合查询条件的纪录</a>
    {% endif %}
    </div>

</div>
</body>
</html>