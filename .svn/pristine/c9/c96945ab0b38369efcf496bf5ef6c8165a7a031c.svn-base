{% if is_paginated %}  
{% load i18n %}  
<div class="pages">
    {% if page_obj.has_previous %}  
        <a href="?page={{ page_obj.previous_page_number }}{{ getvars }}{{ hashtag }}" class="before">‹‹ 上一页</a>
    {% else %}  
        <a href="javascript:void(0);">‹‹ 上一页</a>
    {% endif %}  
    {% for page in pages %}  
        {% if page %}  
            {% ifequal page page_obj.number %}  
                <a href="javascript:void(0);">{{ page }}</a>
            {% else %}  
                <a href="?page={{ page }}{{ getvars }}{{ hashtag }}">{{ page }}</a>
            {% endifequal %}  
        {% else %}  
            ...  
        {% endif %}  
    {% endfor %}  
    {% if page_obj.has_next %}  
        <a href="?page={{ page_obj.next_page_number }}{{ getvars }}{{ hashtag }}" class="after">下一页 ››</a>
    {% else %}  
        <a href="">{% trans "next" %} ››</a>
    {% endif %}
</div>  
{% endif %}  