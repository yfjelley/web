{% load staticfiles %}
{% load settingsvalue %}
{% load url from future %}
{% load i18n %}
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
        "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <title>天天搜贷</title>
    <script src="{% static 'js/jquery.min.js' %}"></script>
    <link href="{% static 'css/base.css' %}" rel="stylesheet">
    <link href="{% static 'css/main.css' %}" rel="stylesheet">
</head>

<body>
{% include "header.html" %}
<div id="content">
    <div class="middle">
        <div class="middle_search">
            <div class="logo">
                <img src="{% static 'images/logo.png' %}"/></div>
            <div class="search">
                <form action="" method="post">
                    {% csrf_token %}
                    <table>
                        {{ form.searchWord }}
                    </table>
                    <input type="submit" class="btn_search" value="">
                </form>
                <br>
                {% if form.errors %}
                    <p style="color: red;">
                        {{ form.searchWord.errors }}
                    </p>
                {% endif %}
            </div>
            {% ifnotequal user.id None %}
                <div class="group">
                    <div class="g_hd"><h3>我的组合搜索</h3></div>
                    <div class="g_bd">
                        <ul class="g_list">
                            {% for f_l in f_ls %}
                                <li>
                                    <a choices="{{ f_l.choices }}"
                                       href="{% url 'shortcut_request' f_l.id %}">{{ f_l.filters.0.choice_name }},{{ f_l.filters.1.choice_name }}...</a>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            {% endifnotequal %}
            <div class="hot">
                <h3>本周热点：</h3>
                <a href="#">三六五网1.2亿投资P2P </a>
                <a href="#">雷军5年内要投资100家公司</a>
                <a href="#">1280万的逾期能否拖垮贷帮网</a>
                <a href="#">榕企疑借p2p网络借贷服务行骗</a>
            </div>
        </div>
    </div>
</div>
{% include "footer.html" %}
</body>
</html>