{% load staticfiles %}
{% load settingsvalue %}
{% load url from future %}
{% load i18n %}
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>注册</title>
    <link href="/static/css/base.css" rel="stylesheet" type="text/css" />
    <link href="/static/css/login.css" rel="stylesheet" type="text/css" />
    <script src="/static/js/jquery.min.js" type="text/javascript"></script>
    <script src="/static/js/yz.js" type="text/javascript"></script>
    <!--[if gte IE 8]>
    <script src="js/placeholder.min.js"> </script>
    <![endif]-->
    <script>
    function show(){
        code.style.display="block";
    }
    function hide(){
        code.style.display="none";
    }
    </script>
</head>

<body>
    <div id="header">
        <div class="top">
            <ul class="nav">
                <li><a href="{% url 'searchindex' %}">首页</a></li>
                <li><a href="{% url 'do_reminder' %}">提醒</a></li>
                <li><a href="{% url 'myfavorite' 4 %}">收藏</a></li>
                <li><a href="{% url 'bbsindex' %}">社区</a></li>
            </ul>
        </div>
    </div>
    <div id="warp">
        <div class="login_header reg_header">
            <a href="index.html"><img src="/static/images/logo1.png" /></a>
        </div>
        <div class="logib_line"></div>
        <div class="login_mid">
            <div class="login_left fl">
                    {% if openid %}
                        <h1>歡迎使用QQ登陸本網站！</h1>
                        <form class="registerform"  action="/qq_is_first/" method="post" name="form1">
                    {% else %}
                        <h1>歡迎使用微博登陸本網站！</h1>
                        <form class="registerform"  action="/wb_is_first/" method="post" name="form1">
                    {% endif %}
                    {% if error %}
                          <h2>{{ error }}</h2>
                    {% endif %}

                    <ul>
                        <li>
                            <label class="label"> 用户名：<span class="need">*</span></label>
                            {{ form.username }}
                            {{ form.username.errors }}
                            <input type="button" value="验证用户名是否存在？" name="un_valid" onclick="check_valid()">
                        </li>


                        <li>
                            <label class="label"> 电子邮箱：<span class="need">*</span></label>
                            {{ form.email }}
                        </li>
                        <li>
                            {{ form.wbid }}
                            {{ form.openid }}
                            {{ form.url }}
                            {{ form.accessToken }}
                        </li>
                        <li>
                            <label class="label">  </label>
                            <input type="submit" class="login_dl reg_btn" value=""
                                   style="background:url('/static/images/btn2.png')">
                        </li>
                        <li>
                            <label class="label">  </label>
                            <a href="#" class="login_zh">《本站协议规章内容》</a>
                        </li>
                    </ul>
                </form>
            </div>
            <div class="login_right fr">
                <p>已经有帐号？</p>
                <a href="{% url 'login' %}" class="login_btn"><img src="/static/images/login_btn.png" /></a>
            </div>
        </div>
    </div>
    <div id="footer">
         <div class="footer">
                <a href="#" class="ico1 fr" onmouseover="show()" onmouseout="hide()"></a><a href="#" class="ico fr"></a><a href="#" class="fl">关于我们</a><a href="#" class="fl">联系我们</a>&nbsp;&nbsp;©2014 Cida 上海辞达金融信息服务有限公司&nbsp;&nbsp;&nbsp;&nbsp;沪ICP证0000001号
               <p id="code" style="display:none;"><img src="/static/images/code.png" /></p>
         </div>

    </div>
    <script type="text/javascript">
        $(function(){
            //$(".registerform").Validform();  //就这一行代码！;
            var demo=$(".registerform").Validform({
                tiptype:3,
                label:".label",
                showAllError:true,
                datatype:{
                    "zh1-6":/^[\u4E00-\u9FA5\uf900-\ufa2d]{1,6}$/
                },
                ajaxPost:false
            });
            //通过$.Tipmsg扩展默认提示信息;
            //$.Tipmsg.w["zh1-6"]="请输入1到6个字符！";
            demo.tipmsg.w["zh1-6"]="请输入1到6个字符！";

	demo.addRule([{
		ele:".inputxt:eq(0)",
		datatype:"*6-16"
	},
	{
		ele:".inputxt:eq(1)",
		datatype:"e"
	}]);
        });
        //ajax验证username是否存在
        function check_valid(){
            var username = $("input[name=username]").val();
            var valid_un = 'shuangwaiwai';
            $.post("{% url 'register' %}",
                {
                    name: username,
                    valid_un:valid_un
                },
                function (data) {
                    if(data==5){
                        alert('用户名已存在');
        {#                $("input[name=return_data]").value='用户名已存在';#}
                    }else if(data==1){
                        alert('恭喜用户名可用');
        {#                $("input[name=return_data]").value='恭喜用户名可用';#}
                    }else
                        alert("yqdDB!")
                }
            );
        }
    </script>
</body>
</html>
