    function QQ_Login(){
        QC.Login(
            {
                btnId : "qqLoginBtn",
                size : "C_S",
                scope : "get_user_info",
                display : "pc"},
                function(reqData, opts){
                    if (QC.Login.check()){
                        QC.Login.getMe(
                            function(openId, accessToken){
                                $.post("{% url 'qq_is_first' %}",
                                        {
                                            openid: openId,
                                            accessToken: accessToken,
                                            nickname: reqData.nickname,
                                            url: reqData.figureurl_qq_1},
                                        function (data) {
                                            document.write(data);
                                            document.close();
                                        },"html");
                             });
                    }else{
                        alert("login failed! please try again!");
                    }
                },
                function(opts){
                    alert('QQ登录 注销成功');
                }
        );
        T_Login_Init_Button();
    }

    function WB_Login(){
        WB2.anyWhere(function (W) {
            W.widget.connectButton(
                {
                    id: "wb_connect_btn",
                    type: '3,2',
                    callback: {
                        login: function (o) {
                            id = o.id;
                            $.post("{% url 'wb_is_first' %}",
                                    {
                                        wbid: id,
                                        nickname: o.screen_name,
                                        url: o.profile_image_url },
                                        function (data) {
                                            document.write(data);
                                            document.close();
                            },"html");
                                },
                        logout: function () {
                                    alert('logout');
                                }
                    }
            });
        });
        T_Login_Init_Button();
    }

    function WB_Login2(){
