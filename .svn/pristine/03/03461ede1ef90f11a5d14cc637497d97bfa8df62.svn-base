#conternt{ position:relative; min-height:540px;_height:540px;}
.middle_search{ padding-top:20px;}
.middle{ min-height:540px;_height:540px; position:absolute; left:50%; margin-left:-512px; top:50%; margin-top:-200px; }
.search{ height:60px; line-height:60px;padding-left:244px; margin-top:30px; padding-bottom:40px;}
.search input,.btn_search{ float:left;}
.search input{ width:500px; height:30px; line-height:30px; border:1px solid #ddd; padding:5px; font-size:18px; color:#999;}
.search input:hover{ border:1px solid #c50512;}
.search input.btn_search{ background:url(../images/search.png) no-repeat 0 0; display:inline-block; width:47px; height:42px; border:none; cursor:pointer;}
.search input.btn_search:hover{ border:none;}
.hot{ text-align:center; overflow:hidden; height:30px; line-height:30px; font-size:14px; margin-top:80px;}
.hot h3{ display:inline; font-size:16px;}
.hot a{ color:#666; text-decoration:underline; margin:0 5px;}
.hot a:hover{ color:#ff0000;}

#top_r ul li.user, #top_r ul li.pwd,#top_r ul li.yzm,#reg-li li{ padding-bottom:25px;}


/*index_login.html*/
.mid_search .search{ padding-bottom:0!important;}
.group{ width:530px; margin:10px auto; }
.g_hd{ height:30px; line-height:30px;}
.g_hd h3{ color:#666; background:url(../images/ico.png) no-repeat 0 center; padding-left:30px; font-size:14px;}
.g_bd,.g_list{ overflow:hidden;}
.g_list{ padding:10px 0;}
.g_list li { float:left; margin:0 15px;}
.g_list li a{ font-size:12px; text-decoration:underline;}

